.custom-filter-dropdown {
    padding: 8px;
    border-radius: 6px;
    background: #fff;
    box-shadow: 0 1px 6px rgba(0, 0, 0, .2);
}

[nz-input] {
    width: 130px;
    margin-right: 8px;
}

nz-select{
    min-width: 180px;
}

.highlight {
    color: #f50;
}

.filter-form {
    margin-bottom: 16px;
    nz-form-item {
        width: 100%;
        display: inline-flex;
        justify-content: space-between;
        nz-form-control {
            padding-left: 16px;
            padding-right: 16px;
            width: 100%;
            [nz-input] {
                width: 100%;
            }
        }
    }
    [nz-input] {
        width: 100%;
    }
}

.search-form-control {
    display: inline-flex;
    justify-content: flex-end;
    align-items: center;
    margin-top: 4px;
    padding-right: 16px;
    * {
        margin-left: 8px;
    }
}

.custom-filter-dropdown {
    :first-child {
        min-width: 180px;
    }
}

.flex-1 {
    flex: 1 !important;
}

.text-lg {
    font-size: 18px !important;
}

.basic-list-btn-block {
    display: block !important;
    width: 100%;
}

.basic-list-input-group {
    width: 270px;
    margin-right: 8px;
}

.width-md {
    width: 240px !important;
}

.mb-sm {
    margin-bottom: 8px !important;
}

.mr-md {
    margin-right: 16px !important;
}

.mb-lg {
    margin-bottom: 24px !important;
}

.card-list-btn-block {
    width: 100%;
    height: 183px;
}

.card-list-block-description {
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 3;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.ad-standard-form-row {
    border-bottom: 1px dashed #e8e8e8;
    padding-bottom: 16px;
    margin-bottom: 16px;
    display: flex;
    align-items: center;
    nz-form-item {
        nz-form-label {
            padding-top: 6px;
        }
        nz-form-control {
            [nz-input] {
                width: 100%;
            }
        }
    }
}

:host ::ng-deep {
    .ant-card-meta-title {
        margin-bottom: 4px;
    }
    nz-list nz-card {
        margin-bottom: 0 !important;
    }
    .card-item-content {
        display: flex;
        margin-top: 16px;
        margin-bottom: -4px;
        line-height: 20px;
        height: 20px;
        justify-content: space-between;
    }
}

:host {
    margin-bottom: -24px;
    ::ng-deep {
        .ant-card {
            width: 100%;
        }
        .ant-card-meta-content {
            margin-top: 0;
        } // disabled white space
        .ant-card-meta-avatar {
            font-size: 0;
        }
        .ant-card-actions {
            background: #f7f9fa;
        }
        .ant-list .ant-list-item-content-single {
            max-width: 100%;
        }
        .card-info {
            margin-top: 16px;
            margin-left: 40px;
            & > div {
                position: relative;
                text-align: left;
                float: left;
                width: 50%;
                p {
                    line-height: 32px;
                    font-size: 24px;
                    margin: 0;
                }
                p:first-child {
                    color: rgba(0,0,0,.45);
                    font-size: 12px;
                    line-height: 20px;
                    margin-bottom: 4px;
                }
            }
        }
        .wan {
            position: relative;
            top: -2px;
            font-size: 14px;
            font-style: normal;
            line-height: 20px;
            margin-left: 2px;
        }
    }
}
